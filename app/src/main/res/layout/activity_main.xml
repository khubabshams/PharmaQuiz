<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5sp"
        android:weightSum="4"
        android:background="@color/colorBackground"
        tools:context="com.apps.khubab.pharmaquiz.MainActivity">

        <LinearLayout
            android:id="@+id/l_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical"
            android:paddingTop="5sp"
            android:layout_margin="5sp">

            <android.support.v7.widget.CardView
                android:id="@+id/card_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                app:cardElevation="2sp"
                android:clickable="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_question"
                        style="@android:style/TextAppearance.DeviceDefault.Medium.Inverse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:padding="5sp"
                        android:text="@string/question_desc"
                        android:textStyle="bold"
                        android:layout_margin="3sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_answers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                app:cardElevation="2sp"
                android:clickable="false">
                <RadioGroup
                    android:id="@+id/rg_choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/rb_choice1"
                        style="@android:style/TextAppearance.DeviceDefault.Medium.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3sp"/>
                    <View
                        android:layout_height="1sp"
                        android:layout_width="match_parent"
                        android:layout_margin="2sp"
                        android:background="@color/colorLightGray"/>
                    <RadioButton
                        android:id="@+id/rb_choice2"
                        style="@android:style/TextAppearance.DeviceDefault.Medium.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3sp"/>
                    <View
                        android:layout_height="1sp"
                        android:layout_width="match_parent"
                        android:layout_margin="2sp"
                        android:background="@color/colorLightGray"/>
                    <RadioButton
                        android:id="@+id/rb_choice3"
                        style="@android:style/TextAppearance.DeviceDefault.Medium.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3sp"/>
                    <View
                        android:layout_height="1sp"
                        android:layout_width="match_parent"
                        android:layout_margin="2sp"
                        android:background="@color/colorLightGray"/>
                    <RadioButton
                        android:id="@+id/rb_choice4"
                        style="@android:style/TextAppearance.DeviceDefault.Medium.Inverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3sp"/>
                </RadioGroup>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:id="@+id/card_previous"
                android:layout_gravity="start"
                android:layout_weight=".8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                app:cardElevation="2sp"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@animator/lift_on_touch"
                android:clickable="true"
                app:cardPreventCornerOverlap="false"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="7">
                    <ImageView
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_background_white"
                        android:src="@drawable/ic_chevron_left_green_24dp"
                        android:padding="5sp"
                        android:layout_marginTop="3sp"
                        android:contentDescription="@string/exit_item" />
                    <TextView
                        android:id="@+id/tv_previous"
                        style="@android:style/TextAppearance.DeviceDefault.Medium.Inverse"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:text="@string/previous"
                        android:textAlignment="center"/>
                    <View
                        android:layout_weight=".05"
                        android:layout_height="1sp"
                        android:layout_width="match_parent"
                        android:layout_margin="5sp"
                        android:background="@color/colorLightGray"/>
                    <TextView
                        android:id="@+id/tv_previous_ques"
                        style="@android:style/TextAppearance.DeviceDefault.Medium.Inverse"
                        android:layout_weight="1.05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="@string/previous_desc"
                        android:textAlignment="center"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_next"
                android:layout_gravity="start"
                android:layout_weight=".8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                app:cardElevation="2sp"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@animator/lift_on_touch"
                android:clickable="true"
                app:cardPreventCornerOverlap="false"
                android:focusable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:weightSum="7">
                    <ImageView
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_background_white"
                        android:src="@drawable/ic_chevron_right_green_24dp"
                        android:padding="5sp"
                        android:layout_marginTop="3sp"
                        android:contentDescription="@string/exit_item" />
                    <TextView
                        android:id="@+id/tv_next"
                        style="@android:style/TextAppearance.DeviceDefault.Medium.Inverse"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="5sp"
                        android:text="@string/next"
                        android:textAlignment="center"/>
                    <View
                        android:layout_weight=".05"
                        android:layout_height="1sp"
                        android:layout_width="match_parent"
                        android:layout_margin="5sp"
                        android:background="@color/colorLightGray"/>
                    <TextView
                        android:id="@+id/tv_next_ques"
                        style="@android:style/TextAppearance.DeviceDefault.Medium.Inverse"
                        android:layout_weight="1.05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5sp"
                        android:textColor="@android:color/darker_gray"
                        android:text="@string/next_desc"
                        android:textAlignment="center"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>